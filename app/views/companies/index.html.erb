<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<%= button_to "New Company", new_company_path, :class => "btn btn-primary", :style => "float: right; margin-top:10px; margin-bottom: 20px", :method => :get%>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-10">Name</th>
      <th class="col-md-2"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td> <%= link_to company.name, company_path(company) %> </td>
        <td>
          <%= link_to 'Edit', edit_company_path(company) %>
          <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }, :style => "color:red" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @companies, :theme => "twitter-bootstrap-3" %>