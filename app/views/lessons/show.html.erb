<p id="notice"><%= notice %></p>
<h1> <%= @lesson.implementer_request.user.name %>'s Session</h1>

<p>
  <strong>Company:</strong>
  <%= @lesson.implementer_request.user.company.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @lesson.name %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @lesson.date.strftime('%a, %d.%m.%y') %>
</p>

<p>
  <strong>Start Time:</strong>
  <%= @lesson.start_time.strftime("%H:%M") %>
</p>

<p>
  <strong>End Time:</strong>
  <%= @lesson.end_time.strftime("%H:%M") %>
</p>

<p>
  <strong>Status:</strong>
  <%= @lesson.status %>
</p>

<!-- <p>
  <strong>Implementer request:</strong>
  <%= @lesson.implementer_request %>
</p>
 -->
<% if @lesson.status == 'pending' %>

    <%= button_to 'Accept', accept_lesson_path(@lesson), method: :patch, class: 'btn btn-success' %>
    <%= button_to 'Reject', refuse_lesson_path(@lesson), method: :patch, class: 'btn btn-danger'%>
<% end %>

<%= link_to 'Edit', edit_lesson_path(@lesson) %> |
<%= link_to 'Back', lessons_path %>
