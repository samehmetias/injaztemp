<p id="notice"><%= notice %></p>

<%= button_to "New School", new_school_path, :class => "btn btn-primary", :style => "float: right; margin-top:10px; margin-bottom: 20px", :method => :get%>

<h1>Listing Schools</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>District</th>
      <th>Prep classes</th>
      <th>Sec classes</th>
      <th>Uni classes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.district %></td>
        <td><%= school.prep_classes %></td>
        <td><%= school.sec_classes %></td>
        <td><%= school.uni_classes %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Delete', school, :style => "color:red", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
